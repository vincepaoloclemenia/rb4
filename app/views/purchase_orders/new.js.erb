$('#modal h4').html('New Purchase Order Item');
<% if current_user.role.role_level.eql? 'branch' %>
	$('.modal-body').html('<%= j render("branch_form") %>');
<% else %>
	$('.modal-body').html('<%= j render("client_form") %>');
<% end %>
$('#modal').modal("show");

$('.chosen').chosen({
	width: "100%"
});

$("[data-toggle='toggle']").bootstrapToggle();


$('#branch').on('change', function(){
	$.ajax({
		url: '/purchase_orders/get_po_number.json',
		data: { id: $(this).val() },
		dataType: 'JSON',
		success: function(data) {
			$('#prn').val(data.pr_number);
			$('#pro').val(data.po_number);
		}
	})
})