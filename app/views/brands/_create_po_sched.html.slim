            .row.pb25.ml25
                .col-md-1
                    = f.check_box :allow_saturday, checked: purchase_order_schedule.present? ? eval(purchase_order_schedule[6]["allowed"]) : false
                .col-md-2
                    label Saturday
                div#6
                    .col-md-4
                        input.form-control type='time' name='purchase_order_setting[saturday_from]' id='saturday_from' value="#{purchase_order_schedule.present? ? purchase_order_schedule[6]['from'] : ''}"
                    .col-md-1
                        label →   
                    .col-md-4  
                        input.form-control type='time' name='purchase_order_setting[saturday_to]' id='saturday_to' value="#{purchase_order_schedule.present? ? purchase_order_schedule[6]['to'] : ''}"
            
            .row.pb25.ml25
                .col-md-1
                    = f.check_box :allow_sunday, checked: purchase_order_schedule.present? ? eval(purchase_order_schedule[0]["allowed"]) : false
