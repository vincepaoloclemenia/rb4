                        input.form-control type='time' name='purchase_order_setting[thursday_from]' id='thursday_from'         
                    .col-md-1
                        label →   
                    .col-md-4  
                        input.form-control type='time' name='purchase_order_setting[thursday_to]' id='thursday_to'         
            
            .row.pb25.ml25 
                .col-md-1
                    = f.check_box :allow_friday, checked: false
                .col-md-2
                    label Friday
                div#5
                    .col-md-4
                        input.form-control type='time' name='purchase_order_setting[friday_from]' id='friday_from'         
                    .col-md-1
                        label →   
                    .col-md-4  
                        input.form-control type='time' name='purchase_order_setting[friday_to]' id='friday_to'         
            
            .row.pb25.ml25
                .col-md-1
                    = f.check_box :allow_saturday, checked: false
                .col-md-2
                    label Saturday
                div#6
                    .col-md-4
                        input.form-control type='time' name='purchase_order_setting[saturday_from]' id='saturday_from'         
                    .col-md-1
                        label →   
                    .col-md-4  
                        input.form-control type='time' name='purchase_order_setting[saturday_to]' id='saturday_to'         
            
            .row.pb25.ml25
                .col-md-1
                    = f.check_box :allow_sunday, checked: false
                .col-md-2
                    label Sunday
                div#0
                    .col-md-4
                        input.form-control type='time' name='purchase_order_setting[sunday_from]' id='sunday_from'         
                    .col-md-1
                        label →   
                    .col-md-4  
                        input.form-control type='time' name='purchase_order_setting[sunday_to]' id='sunday_to'         

    .modal-footer.no-border
		span.inline.float-right
			= link_to "Cancel", '#', class: "btn btn-default", data: { dismiss: "modal" }
			|
			button.btn.btn-primary type="submit" Save
   

javascript:
    $("#schedule").on("change", function(e){
        if(e.target.checked){
            $("#information_board").html("<b>Customized Schedule</b> lets you choose what specific day and time you would like Branch Admins send their Purchase Orders. Just check the boxes beside you prefer.<br/><br/><b>NOTE:</b> Days that are <i>left unchecked</i> automatically ignore the Purchase Order submissions from Branch Admins. If there is a day checked and neither the 'from' and 'to' field is filled up, that would be understood as 'whole day'.")           
            $("#schedule_panel").slideDown();
        }else{
            $("#information_board").html("<b>By Default</b>, Branch Admins can send their Purchase Orders 24/7")
            $("#schedule_panel").slideUp()
        }
    })
    
    if($("#schedule").is(":checked")){
        $("#schedule_panel").slideDown();
        $("#information_board").html("<b>Customized Schedule</b> lets you choose what specific day and time you would like Branch Admins send their Purchase Orders. Just check the boxes beside you prefer.<br/><br/><b>NOTE:</b> Days that are <i>left unchecked</i> automatically ignore the Purchase Order submissions from Branch Admins. If there is a day and neither the 'from' and 'to' field is filled up, that would be understood as 'whole day'.")	    
    }else{
        $("#information_board").html("<b>By Default</b>, Branch Admins can send their Purchase Orders 24/7")
        $("#schedule_panel").slideUp()
    }

