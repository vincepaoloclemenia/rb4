                .col-md-1
                    = f.check_box :allow_thursday, checked: purchase_order_schedule.present? ? eval(purchase_order_schedule[4]["allowed"]) : false
                .col-md-2
                    label Thursday
                div#4
                    .col-md-4
                        input.form-control type='time' name='purchase_order_setting[thursday_from]' id='thursday_from' value="#{purchase_order_schedule.present? ? purchase_order_schedule[4]['from'] : ''}"                
                    .col-md-1
                        label →   
                    .col-md-4  
                        input.form-control type='time' name='purchase_order_setting[thursday_to]' id='thursday_to' value="#{purchase_order_schedule.present? ? purchase_order_schedule[4]['to'] : ''}"
            
            .row.pb25.ml25 
                .col-md-1
                    = f.check_box :allow_friday, checked: purchase_order_schedule.present? ? eval(purchase_order_schedule[5]["allowed"]) : false
                .col-md-2
                    label Friday
                div#5
                    .col-md-4
                        input.form-control type='time' name='purchase_order_setting[friday_from]' id='friday_from' value="#{purchase_order_schedule.present? ? purchase_order_schedule[5]['from'] : ''}"
