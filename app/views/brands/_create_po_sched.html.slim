= form_for :purchase_order_setting, url: create_purchase_order_setting_brands_path do |f|
    
    .alert.alert-info role="alert"
        .row   
            .col-xs-1.text-right
                i.icon-glyph-73.f116
            .col-xs-11 id="information_board"
    - if @setting.present?
        .row.mb25    
            .col-md-offset-5.col-md-4
                = f.check_box :send_pos, checked: @setting.send_pos, data: {off: "Daily", offstyle: "default", on: "Customized", onstyle: "success", style:"android", toggle: "toggle"}, id: "schedule"

        .panel-body id='schedule_panel'
            - purchase_order_schedule = @setting.purchase_order_schedule || [] 
            .row.pb25.ml25
                .col-md-1
                    = f.check_box :allow_monday, checked: purchase_order_schedule.present? ? eval(purchase_order_schedule[1]["allowed"]) : false
                .col-md-2
                    label Monday
                div#1
                    .col-md-4
                        input.form-control type='time' name='purchase_order_setting[monday_from]' id='monday_from' value="#{purchase_order_schedule.present? ? purchase_order_schedule[1]['from'] : ''}"
                    .col-md-1
                        label →            
                    .col-md-4  
                        input.form-control type='time' name='purchase_order_setting[monday_to]' id='monday_to' value="#{purchase_order_schedule.present? ? purchase_order_schedule[1]['to'] : ''}"
            
            .row.pb25.ml25
                .col-md-1
                    = f.check_box :allow_tuesday, checked: purchase_order_schedule.present? ? eval(purchase_order_schedule[2]["allowed"]) : false
                .col-md-2
                    label Tuesday
                div#2
                    .col-md-4
                        input.form-control type='time' name='purchase_order_setting[tuesday_from]' id='tuesday_from' value="#{purchase_order_schedule.present? ? purchase_order_schedule[2]['from'] : ''}"
                    .col-md-1
                        label →                 
                    .col-md-4  
                        input.form-control type='time' name='purchase_order_setting[tuesday_to]' id='tuesday_to' value="#{purchase_order_schedule.present? ? purchase_order_schedule[2]['to'] : ''}"
            
            
            .row.pb25.ml25
                .col-md-1
                    = f.check_box :allow_wednesday, checked: purchase_order_schedule.present? ? eval(purchase_order_schedule[3]["allowed"]) : false
                .col-md-2
                    label Wednesday
                div#3
                    .col-md-4
                        input.form-control type='time' name='purchase_order_setting[wednesday_from]' id='wednesday_from' value="#{purchase_order_schedule.present? ? purchase_order_schedule[3]['from'] : ''}"                
                    .col-md-1    
                        label →   
                    .col-md-4  
                        input.form-control type='time' name='purchase_order_setting[wednesday_to]' id='wednesday_to' value="#{purchase_order_schedule.present? ? purchase_order_schedule[3]['to'] : ''}"

