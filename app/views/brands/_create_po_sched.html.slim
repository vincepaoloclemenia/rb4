                        input.form-control type='time' name='purchase_order_setting[tuesday_to]' id='tuesday_to'
            
            
            .row.pb25.ml25
                .col-md-1
                    = f.check_box :allow_wednesday, checked: false
                .col-md-2
                    label Wednesday
                div#3
                    .col-md-4
                        input.form-control type='time' name='purchase_order_setting[wednesday_from]' id='wednesday_from'         
                    .col-md-1
                        label →   
                    .col-md-4  
                        input.form-control type='time' name='purchase_order_setting[wednesday_to]' id='wednesday_to'

