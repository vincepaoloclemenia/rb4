$('.flash-notice').replaceWith("<%= j render partial: 'partials/flash' %>");
retriggerFlash();

<% if @success %>
	$('.modal').modal('hide');
	$('body').removeClass('modal-open');
	$('.modal-backdrop').remove();
	$('#brand-info').html("<%= j render partial: 'brand_info', brand: @brand %>");
<% end %>