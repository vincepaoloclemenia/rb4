$('#modal h4').html('New Purchase Order Item');

$('.modal-body').html('<%= j render("form") %>');

$('#modal').modal("show");

$('.chosen').chosen({
	width: "100%"
});

$("#br").change(function(){
	$.ajax({
		url: "/purchase_order_generator/get_pos.json",
		data: { id: $(this).val() },
		method: "GET",
		dataType: "JSON",
		success: function(data){
			$("#prn").val(data.pr_number)
			$("#pro").val(data.po_number)
		}
	});
});

$("[data-toggle='toggle']").bootstrapToggle();