$('.flash-notice').replaceWith("<%= j render partial: 'partials/flash' %>");
retriggerFlash();

<% if @success %>
	$('.modal').modal('hide');
	$('body').removeClass('modal-open');
	$('.modal-backdrop').remove();
	$('#purchase-list').html("<%= j render partial: 'purchase_list', purchases: @purchases %>");
	$('.chosen').chosen({
		width: "100%"
	});
<% end %>