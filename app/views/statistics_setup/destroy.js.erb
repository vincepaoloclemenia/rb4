$('.flash-notice').replaceWith("<%= j render partial: 'partials/flash' %>");
retriggerFlash();


$('#stat_<%= @statistic.id %>').fadeOut();


<% if current_client.statistics.empty? %>
	$('.empty-warning').css("display","block");
	$('#statistics').css("display","none");
<% else %>
	$('.empty-warning').css("display","none");
	$('#statistics').css("display","block");
<% end %>