<div class="app layout-fixed-header bg-login usersession">
  <div class="full-height">
    <%= render "partials/flash" if flash %>
    <div class="center-wrapper">
      <div class="center-content">
        <div class="row no-margin">
          <div class="text-center mb15">
            <img src="/img/restobot.png" class="w300">
          </div>
          <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 bg-white">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"form-layout" } ) do |f| %>
              <p class="text-center mb30 mt10">
                Lost your password? Submit your email address and weâ€™ll send you a link to reset your password.
              </p>
              <div class="form-inputs">
                <%= f.email_field :email, autofocus: true, class:"form-control input-lg", placeholder:"Email Address" %>
              </div>
              <button class="btn btn-success btn-block btn-lg mb15" type="submit">
                <span>Reset Password</span>
              </button>
              <p>
                <em>Psst...Remembered your password?</em> <%= link_to "Try logging in again", session_path(resource_name) %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



