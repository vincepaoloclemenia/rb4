	$('#purchase_order_item_item_id').change(function(){
		$('#purchase_order_item_price_selected').val('')
		$('#purchase_order_item_quantity').val('')
		$.ajax({
			url: "#{get_units_path}",
			data: {
				item_id : $(this).val(),
				supplier_id: "#{@purchase_order.supplier.id}"
			}
		});
	});
	$('#purchase_order_item_quantity').on('keyup', function(){
		$.ajax({
			url: "#{get_price_path}",
			data: { 
				item_id: $('#purchase_order_item_item_id').val(),
				amount: parseInt($(this).val()),	
				supplier_id: "#{@purchase_order.supplier.id}"
			},
			success: (data) => {
				$('#purchase_order_item_price_selected').val(data.total)
			}
		});
	});
