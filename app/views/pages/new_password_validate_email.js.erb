var emailValid = validateEmail("<%= @email %>");

if(emailValid == false){
	$('#user_email').wrap("<div class='has-error'></div>");
	$('#user_email').parent().prepend("<label class='control-label pull-right' for='user_email'>Email is invalid</label>");
	$('form').parent().removeClass('panel-refreshing');
}
else{
	<% if @user %>
		$('#user_email').wrap("<div class='has-success'></div>");
	<% else %>
		$('#user_email').wrap("<div class='has-error'></div>");
		$('#user_email').parent().prepend("<label class='control-label pull-right' for='user_email'>User with this email doesn't exist</label>");
		$('form').parent().removeClass('panel-refreshing');
	<% end %>
}

function validateEmail(email) {
  var re = /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
  return re.test(email);
}