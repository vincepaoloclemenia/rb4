<% if @role.role_level == "brand" %>
	$("<%= @role_field_id %>").parent().parent().find('.brand_field_div').slideDown();
	$("<%= @role_field_id %>").parent().parent().find('.branch_field_div').slideUp();
<% elsif @role.role_level == "branch" %>
	$("<%= @role_field_id %>").parent().parent().find('.brand_field_div').slideDown();
	$("<%= @role_field_id %>").parent().parent().find('.branch_field_div').slideDown();
<% else %>
	$("<%= @role_field_id %>").parent().parent().find('.brand_field_div').slideUp();
	$("<%= @role_field_id %>").parent().parent().find('.branch_field_div').slideUp();
<% end %>