.panel.panel-primary
	.panel-heading
		.pull-left.mt7 Comments / Suggestions / Report a bug
	.panel-body
		.row
			.col-xs-12
				.form-field
					= form_for :contact, url: csrab_path do |f|
						.row
							.col-xs-12
								p = f.text_area :message, class: "form-control", placeholder: "Your message here", rows: 4
							.col-xs-12
								.pull-right
									= f.submit "Send Message", class: "btn btn-primary"	

javascript:
	$('.change-btn').click(function(){
		$(this).parent().parent().parent().parent().find('.form-field').slideToggle();
		$(this).parent().find('a').toggle();
	});