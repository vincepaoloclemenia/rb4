.panel.panel-primary
	.panel-heading
		.pull-left.mt7 Themes
	.panel-body
		.row
			.col-xs-12
				.pull-left
					p
						| Current theme: 
						= @setting.theme
				.pull-right
					a href="#0" class="btn btn-default change-btn" Change Theme
					a href="#0" class="btn btn-default change-btn" style="display: none;" Cancel
		.form-field style="display: none;"
			hr
			= form_for @setting, url: update_settings_path do |f|
				.row
					.col-xs-3
						p = f.select :theme, @theme_list, {}, class: "chosen"
					.col-xs-3
						= f.submit "Update", class: "btn btn-primary"	

