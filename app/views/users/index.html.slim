				h4.modal-title Create User
			.modal-body
				= form_for @user, url: company_users_path do |f|
					.row.mb10
						.col-xs-12
							= f.label :first_name
								| First Name 
								small.field-req *
							= f.text_field :first_name, class: "form-control"
						.col-xs-12
							= f.label :last_name
								| Last Name 
								small.field-req *
