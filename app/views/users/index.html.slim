.panel.panel-primary
	.panel-heading.border.pb45
		.pull-left.mt7 Users
		.pull-right
			- if view_access_control('users','create')
				= link_to "<i class='icon-maxicons2-paste mr5'></i> Create User".html_safe, '#', data: { toggle: "modal", target: ".create-user-modal" }, class: "btn btn-default btn-round btn-outline"
	.panel-body
		.no-more-tables
			table.table.table-bordered.table-striped.mb0 data-sortable="true"
				thead
					tr.bg-thead
						th width="225" Name
						th width="225" Email
						th width="225" Username
						th width="225" Role
						th width="100" data-sortable="false" Action
				tbody
					- @users.each do |user|
						tr
							td data-title="Name" = user.full_name
							td data-title="Email" = user.email
							td data-title="Username" = user.username
							td data-title="Role" = user.role.name
							td.action data-title="Action"
								- if view_access_control('users','update')
									= link_to "<i class='icon-maxicons2-editting'></i>".html_safe, 'javascript:;', class: "btn btn-default btn-xs mb10", data: { tt: "tooltip", placement: "top", "original-title" => "Edit", toggle: "modal", target: ".edit-user-#{user.id}" }
								- if view_access_control('users','destroy')
									= link_to "<i class='icon-maxicons1-exit'></i>".html_safe, company_user_path(user), method: :delete, class: "btn btn-default btn-xs mb10 swal-warning-confirm", data: { tt: "tooltip", placement: "top", "original-title" => "Delete", confirm: "Are you sure?" }

						.modal class="edit-user-#{user.id}" tabindex="-1" role="dialog" aria-hidden="true"
							.modal-dialog.modal-sm
								.modal-content
									.modal-header
										button.close type="button" data-dismiss="modal" aria-hidden="true" x
										h4.modal-title Edit User
									.modal-body
										= form_for user, url: company_user_path(user) do |f|
											.row.mb10
												.col-xs-12
													= f.label :first_name
														| First Name 
														small.field-req *
													= f.text_field :first_name, class: "form-control"
												.col-xs-12
													= f.label :last_name
														| Last Name 
														small.field-req *
													= f.text_field :last_name, class: "form-control"
												.col-xs-12
													= f.label :email
														| Email 
														small.field-req *
													= f.text_field :email, class: "form-control"
												.col-xs-12
													= f.label :username
														| Username 
														small.field-req *
													= f.text_field :username, class: "form-control"
												= f.fields_for :client_user_access, user.client_user_access do |cua|
													.col-xs-12.role_field_div
														= hidden_field_tag :user_role_id, user.client_user_access.branch_id
														= cua.label :role_id
															| Role 
															small.field-req *
														= cua.select :role_id, current_client.roles.pluck(:name,:id), { include_blank: true }, class: "chosen role-field", data: { placeholder: "Select" }, id: "role_field_id_#{user.id}"
													.col-xs-12.brand_field_div
														= cua.label :brand_id
															| Brand 
															small.field-req *
														= cua.select :brand_id, current_client.brands.pluck(:name,:id), { include_blank: true }, class: "chosen", data: { placeholder: "Select" }, id: "brand_field_id_#{user.id}"
													.col-xs-12.branch_field_div
														= cua.label :branch_id
															| Branch 
															small.field-req *
														= cua.select :branch_id, [], { include_blank: true }, class: "chosen", data: { placeholder: "Select" }
											.row.mb10
												.col-xs-12.mt20
													| ( 
													small.field-req *
													|  ) 
													i indicates field is required
											.modal-footer.no-border
												span.inline.float-right
													= link_to "Cancel", '#', class: "btn btn-default", data: { dismiss: "modal" }
													|  
													= f.submit "Update", class: "btn btn-primary"

