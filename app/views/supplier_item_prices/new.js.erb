$('#modal h4').html('Add Item Pricing');

$('.modal-body').html('<%= j render("form") %>');

$('#modal').modal("show");

$('.chosen').chosen({
	width: "100%"
});

$("[data-toggle='toggle']").bootstrapToggle();

$('#supplier_item_price_id_chosen').change(function(){			
	$.ajax({
		url: '#{price_path}',
		data: {
			item_id: $(this).val()
		},
		success: (data) => {
			$('#supplier-amount').val(data.price);
		}
	});	  	
});